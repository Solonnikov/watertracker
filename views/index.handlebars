{{user}}
<section class="info">
	<div class="alert alert-warning" role="alert">
		<span id="amount">Your recommended daily amount of liquids is &nbsp<button type="button" class="btn btn-xs btn-success">{{ user.norm }} liter</button></span>
	</div>
</section>
<h4>That's you progress for today:</h4>
<div class="progress">
	<div id="progress-bar" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">60%</div>
</div>
<div class="jumbotron">
    <h2>Let's add a drink!</h2>
	<form method="post" action="/">
		<div class="form-group">
	        <input type="text" class="form-control to-center hidden" name="id" id="id" value="{{user._id}}">
	    </div>
	    <div class="form-group">
	        <label for="drink">Drink</label>
	        <select type="text" class="form-control to-center" name="drink" id="drink" placeholder="Drink">
	          	<option>Water</option>
			    <option>Tea</option>
			    <option>Coffee</option>
			    <option>Milk</option>
			    <option>Soda</option>
			    <option>Juice</option>
			    <option>Beer</option>
			    <option>Wine</option>
			    <option>Strong alcohol</option>
			    <option>Energy drink</option>
			    <option>Jogurt</option>
			    <option>Smoothy</option>
			    <option>Cacao</option>
			    <option>Kefir</option>
			    <option>Soup</option>
			    <option>Limo</option>
			    <option>Other</option>
	        </select>
	    </div>
	    <div class="form-group">
	        <label for="amount">Amount (ml.)</label>
			<select type="text" class="form-control to-center" name="amount" id="amount" placeholder="amount">
	          	<option>30</option>
			    <option>50</option>
			    <option>100</option>
			    <option>150</option>
			    <option>200</option>
			    <option>250</option>
			    <option>300</option>
			    <option>330</option>
			    <option>400</option>
			    <option>500</option>
			    <option>600</option>
			    <option>800</option>
			    <option>1000</option>
	        </select>
	    </div>
	    <button type="submit" class="btn btn-primary btn-lg">Drink!</button>
	</form>
</div>
<section class="fact">
	<div class="alert alert-info" id="placeholder" role="alert"><i class="fa fa-2x fa-info-circle padding-right" aria-hidden="true"></i></div>
</section>
<a href="/get-drink" class="btn btn-default">Show history</a>
<a href="/#" class="btn btn-default">Hide history</a>

{{#each items}}
  	<ul class="list-group">
    	<li class="list-group-item"><h5>{{this.drink}}, {{this.amount}} ml, {{this.date}} {{this._creator}}</h5></li>
  	</ul>
{{/each}}

<script type="text/javascript" src="js/script.js"></script>
